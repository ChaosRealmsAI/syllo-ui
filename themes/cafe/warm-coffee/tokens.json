{
  "id": "warm-coffee",
  "name": "Warm Coffee",
  "industry": "cafe",
  "vibe": "手工感、温暖、纸质纹理、黑板元素、圆润友好",

  "colors": {
    "espresso": "#3E2723",
    "bean": "#5D4037",
    "latte": "#F5E6CA",
    "crema": "#D7CCC8",
    "accent": "#FF7043",
    "white": "#FFFFFF",
    "chalkboard-bg": "#222",
    "chalkboard-text": "#eee",
    "chalkboard-muted": "#999",
    "chalkboard-border": "#444"
  },

  "fonts": {
    "display": { "latin": "Pacifico", "cjk": "ZCOOL KuaiLe", "stack": "'Pacifico', 'ZCOOL KuaiLe', cursive" },
    "heading": { "latin": "Lora", "cjk": "Noto Serif SC", "stack": "'Lora', 'Noto Serif SC', serif" },
    "body": { "latin": "Nunito", "cjk": "Noto Sans SC", "stack": "'Nunito', 'Noto Sans SC', sans-serif" },
    "google-import": "https://fonts.googleapis.com/css2?family=Lora:ital,wght@0,400;0,600;1,400&family=Nunito:wght@300;400;700&family=Pacifico&family=ZCOOL+KuaiLe&family=Noto+Serif+SC:wght@400;700&family=Noto+Sans+SC:wght@300;400;700&display=swap"
  },

  "typography": {
    "hero-title": { "font": "display", "size": "5rem", "mobile": "3.5rem" },
    "hero-subtitle": { "font": "heading", "size": "1.5rem", "style": "italic" },
    "section-title": { "font": "heading", "size": "3rem", "weight": "700" },
    "section-desc": { "font": "body", "size": "1.1rem", "max-width": "600px" },
    "card-title": { "font": "heading", "size": "1.5rem", "weight": "700" },
    "nav-link": { "font": "body", "size": "14px", "weight": "700", "transform": "uppercase" },
    "logo": { "font": "display", "size": "32px" }
  },

  "spacing": {
    "container-max": "1100px",
    "container-narrow": "800px",
    "section-padding": "100px 0",
    "section-header-mb": "60px",
    "grid-gap": "40px",
    "card-padding": "30px"
  },

  "shape": {
    "radius": "12px",
    "radius-pill": "30px",
    "radius-chalkboard": "10px",
    "shadow": "5px 5px 20px rgba(62, 39, 35, 0.1)",
    "shadow-hover": "0 10px 30px rgba(62, 39, 35, 0.2)"
  },

  "icons": {
    "library": "Phosphor Icons",
    "cdn": "https://unpkg.com/@phosphor-icons/web",
    "usage": "<i class=\"ph ph-{name}\"></i>"
  },

  "images": {
    "source": "Unsplash",
    "params": "w=800&auto=format&fit=crop"
  },

  "responsive": {
    "breakpoint": "900px"
  }
}
